<Application x:Class="Pos.Client.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="Btn.GlobalPrimary" BasedOn="{StaticResource Btn.Outlined}" TargetType="Button"/>
            <Style x:Key="Btn.GlobalSecondary" BasedOn="{StaticResource Btn.Outlined}" TargetType="Button"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
