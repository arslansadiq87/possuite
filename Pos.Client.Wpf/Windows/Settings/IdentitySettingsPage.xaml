<UserControl x:Class="Pos.Client.Wpf.Windows.Settings.IdentitySettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Pos.Client.Wpf.Converters"
             Width="800"
             MaxWidth="1000">
    <UserControl.Resources>
        <conv:NegateBooleanConverter x:Key="NegateBool"/>
        <conv:BytesToBitmapConverter x:Key="BytesToBitmap"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Header + scope -->
            <RowDefinition Height="*"/>
            <!-- Main -->
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
        </Grid.RowDefinitions>

        <!-- HEADER & SCOPE -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,16">
            <!-- Header text -->
            <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                <TextBlock Text="Identity &amp; Branding"
                           FontSize="18"
                           FontWeight="SemiBold"/>
                <TextBlock Text="Configure outlet name, address, tax ID, FBR mode, and receipt logo."
                           FontSize="12"
                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Scope selector card -->
            
        </DockPanel>
        <Border DockPanel.Dock="Right" Grid.Row="1"
        CornerRadius="4"
        Padding="0,6"
        Margin="0,16,0,16"
        Background="#0F000000"
        BorderBrush="#22000000"
        BorderThickness="1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                <TextBlock Text="Scope:"
                   VerticalAlignment="Center"
                   Margin="8,0,16,0"
                   FontWeight="SemiBold"/>

                <RadioButton Content="Global" VerticalAlignment="Center"
                     Margin="0,0,8,0"
                     IsChecked="{Binding IsGlobal}"
                     GroupName="Scope"
                     IsEnabled="{Binding CanEditGlobal}"/>

                <RadioButton Content="Specific outlet" VerticalAlignment="Center"
                     Margin="0,0,8,0"
                     IsChecked="{Binding IsGlobal, Converter={StaticResource NegateBool}}"
                     GroupName="Scope"
                     IsEnabled="{Binding CanEditGlobal}"/>

                <ComboBox Width="220" Height="26" VerticalContentAlignment="Center" VerticalAlignment="Center"
                  ItemsSource="{Binding Outlets}"
                  SelectedItem="{Binding SelectedOutlet}"
                  DisplayMemberPath="Name"
                  IsEnabled="{Binding CanEditGlobal}"
                  Margin="8,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="2" IsEnabled="{Binding CanEdit}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- LEFT: Identity + Tax/FBR -->
            <Border Grid.Column="0"
                    Background="#06000000"
                    BorderBrush="#22000000"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="14"
                    Margin="0,0,12,0">
                <StackPanel>

                    <!-- Identity block -->
                    <TextBlock Text="Outlet identity"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Display name"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Height="26" VerticalContentAlignment="Center"
                                 Text="{Binding OutletDisplayName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,2"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Address line 1"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Height="26" VerticalContentAlignment="Center"
                                 Text="{Binding AddressLine1, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Address line 2"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Height="26" VerticalContentAlignment="Center"
                                 Text="{Binding AddressLine2, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Phone"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Height="26" VerticalContentAlignment="Center"
                                 Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <!-- Divider -->
                    <Separator Margin="0,0,0,10"/>

                    <!-- Tax / FBR block -->
                    <TextBlock Text="Tax &amp; compliance"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <CheckBox IsChecked="{Binding ShowBusinessNtn}"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="Show NTN"
                                       Margin="4,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBox Grid.Column="1" Height="26" VerticalContentAlignment="Center"
                                 Width="180"
                                 HorizontalAlignment="Left"
                                 Text="{Binding BusinessNtn, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <CheckBox IsChecked="{Binding EnableFbr}"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="Enable FBR mode"
                                       Margin="4,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <TextBlock Text="POS ID"
                                       VerticalAlignment="Center"
                                       Margin="0,0,6,0"/>
                            <TextBox Width="200" Height="26" VerticalContentAlignment="Center"
                                     Text="{Binding FbrPosId, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding EnableFbr}"/>
                        </StackPanel>
                    </Grid>

                </StackPanel>
            </Border>

            <!-- RIGHT: Logo card -->
            <Border Grid.Column="1"
                    Background="#06000000"
                    BorderBrush="#22000000"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="14">
                <StackPanel>
                    <TextBlock Text="Receipt logo"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="This logo will be used on thermal receipts and other printouts configured in the receipt builder."
                               FontSize="11"
                               Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>

                    <Border BorderBrush="#33000000"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="6"
                            Height="140"
                            Background="#05000000"
                            Margin="0,0,0,8">
                        <Grid>
                            <!-- Logo preview -->
                            <Image Source="{Binding LogoPng, Converter={StaticResource BytesToBitmap}}"
           Stretch="Uniform"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>

                            <!-- Placeholder text -->
                            <TextBlock Text="No logo selected"
               Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
               FontStyle="Italic"
               HorizontalAlignment="Center"
               VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LogoPng}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Upload" Height="26" VerticalContentAlignment="Center"
                                Command="{Binding UploadLogoCommand}"
                                MinWidth="80"
                                Margin="0,0,8,0"/>
                        <Button Content="Remove" Height="26" VerticalContentAlignment="Center"
                                Command="{Binding RemoveLogoCommand}"
                                MinWidth="80"/>
                    </StackPanel>

                    <TextBlock Text="Recommended: PNG with transparent background."
                               FontSize="11"
                               Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ACTIONS -->
        <DockPanel Grid.Row="3" Margin="0,16,0,0">
            <TextBlock DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       FontSize="11"
                       Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                       Text="Changes are saved per outlet (or globally if in Global scope)." />

            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Reset" Height="26" VerticalContentAlignment="Center"
                        Command="{Binding ResetCommand}"
                        Margin="0,0,8,0"
                        MinWidth="80"/>

                <Button Content="Save" Height="26" VerticalContentAlignment="Center"
                        Command="{Binding SaveCommand}"
                        MinWidth="90"
                        IsDefault="True"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>

    