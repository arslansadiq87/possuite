<UserControl x:Class="Pos.Client.Wpf.Windows.Settings.PreferencesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ctrl="clr-namespace:Pos.Client.Wpf.Controls"
             mc:Ignorable="d" d:DesignWidth="920" d:DesignHeight="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="User Preferences (this PC)" FontSize="20" FontWeight="SemiBold"/>

            <!-- Purchase defaults -->
            <GroupBox Grid.Row="2" Header="Purchase Defaults" Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Destination Scope:" VerticalAlignment="Center"/>

                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                        <RadioButton Content="Outlet"
                         IsChecked="{Binding PurchaseDestinationScope, Mode=TwoWay, Converter={StaticResource EqualityConverter}, ConverterParameter=Outlet}"/>
                        <RadioButton Content="Warehouse"
                         IsChecked="{Binding PurchaseDestinationScope, Mode=TwoWay, Converter={StaticResource EqualityConverter}, ConverterParameter=Warehouse}"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Destination:" VerticalAlignment="Center"/>

                    <!-- Outlet picker -->
                    <ComboBox Grid.Row="2" Grid.Column="1" x:Name="OutletBox"
                    ItemsSource="{Binding Outlets}"
                    SelectedValuePath="Id"
                    DisplayMemberPath="Name"
                    SelectedValue="{Binding PurchaseDestinationId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PurchaseDestinationScope}" Value="Outlet">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>

                    <!-- Warehouse picker -->
                    <ComboBox Grid.Row="3" Grid.Column="1" x:Name="WarehouseBox"
                    ItemsSource="{Binding Warehouses}"
                    SelectedValuePath="Id"
                    DisplayMemberPath="Name"
                    SelectedValue="{Binding PurchaseDestinationId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PurchaseDestinationScope}" Value="Warehouse">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </Grid>
            </GroupBox>

            <!-- Items defaults -->
            <GroupBox Grid.Row="4" Header="Item Defaults" Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Default Barcode Type:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1"
                    ItemsSource="{Binding BarcodeTypes}"
                    SelectedItem="{Binding DefaultBarcodeType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Width="220"/>
                </Grid>
            </GroupBox>
            <!-- Date & Time -->
            <GroupBox Grid.Row="6" Header="Date &amp; Time" Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Display Time Zone:" VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="1"
              ItemsSource="{Binding TimeZones}"
              SelectedValue="{Binding SelectedTimeZoneId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              SelectedValuePath="Id"
              DisplayMemberPath="DisplayName"
              Width="360"/>
                </Grid>
            </GroupBox>

            <!-- === Till & Payments (Per-Outlet) === -->
            <GroupBox Header="Till &amp; Payments (Per-Outlet)" Grid.Row="8" Margin="0,12,0,0"   IsEnabled="{Binding CanEditOutletPayments}">
                <StackPanel Margin="12,8,12,12" Orientation="Vertical">

                    <!-- Outlet picker -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Outlet" Width="140" VerticalAlignment="Center"/>
                        <ComboBox Width="280"
                ItemsSource="{Binding Outlets}"
                DisplayMemberPath="Name"
                SelectedItem="{Binding SelectedOutlet, Mode=TwoWay}"/>
                    </StackPanel>

                    <!-- Use Till -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Use Till" Width="140" VerticalAlignment="Center"/>
                        <CheckBox IsChecked="{Binding UseTill, Mode=TwoWay}"
                VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Sales Card Clearing Account -->
                    <GroupBox Header="Sales Card Clearing" Margin="0,4,0,0">
                        <StackPanel Margin="8">
                            <!-- Reuse your existing AccountPicker style from Invoice Settings -->
                            <ctrl:AccountSearchBox
                                ItemsSource="{Binding BankAccounts}"
                                SelectedAccount="{Binding SelectedSalesCardClearingAccount, Mode=TwoWay}"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Purchase Bank Account -->
                    <GroupBox Header="Purchase Bank" Margin="0,4,0,0">
                        <StackPanel Margin="8">
                            <ctrl:AccountSearchBox
                                ItemsSource="{Binding BankAccounts}"
                                SelectedAccount="{Binding SelectedPurchaseBankAccount, Mode=TwoWay}"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button Content="Reload" Command="{Binding ReloadOutletPaymentsCommand}"/>
                    </StackPanel>

                </StackPanel>
            </GroupBox>



            <!-- Buttons -->
            <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="120"
                Command="{Binding SaveCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                    <Button.ToolTip>Save preferences for this machine</Button.ToolTip>
                </Button>
                <Button Content="Reload" Width="120"
                Command="{Binding LoadCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
