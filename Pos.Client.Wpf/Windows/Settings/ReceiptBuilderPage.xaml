                                            <ComboBoxItem Content="Left"/>
                                            <ComboBoxItem Content="Center"/>
                                            <ComboBoxItem Content="Right"/>
                                        </ComboBox>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding PreviewZReportCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <Separator Margin="0,0,0,10"/>

                            <TextBlock Text="Common (Z Report)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <StackPanel>
                                <CheckBox Content="Show QR" IsChecked="{Binding ZReportTemplate.ShowQr}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <i:InvokeCommandAction Command="{Binding PreviewZReportCommand}"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction Command="{Binding PreviewZReportCommand}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </CheckBox>
                                <CheckBox Content="Show cashier" IsChecked="{Binding ZReportTemplate.ShowCashierOnReceipt}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <i:InvokeCommandAction Command="{Binding PreviewZReportCommand}"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction Command="{Binding PreviewZReportCommand}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </CheckBox>
                                <CheckBox Content="Print barcode" IsChecked="{Binding ZReportTemplate.PrintBarcodeOnReceipt}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <i:InvokeCommandAction Command="{Binding PreviewZReportCommand}"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction Command="{Binding PreviewZReportCommand}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </CheckBox>
                            </StackPanel>

                        </StackPanel>
                    </Border>

                    <!-- RIGHT: Preview -->
                    <Border Grid.Column="1"
                            Background="#06000000"
                            BorderBrush="#22000000"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Receipt preview" FontWeight="SemiBold" Margin="0,0,0,8"/>

                            <ScrollViewer Grid.Row="1" Margin="0,4,0,0" Background="#111" Padding="6">
                                <TextBlock Text="{Binding ZReportPreviewText}" FontFamily="Consolas" Foreground="White" TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- ACTIONS -->
        <DockPanel Grid.Row="3" Margin="0,16,0,0">
            <TextBlock DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       FontSize="11"
                       Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                       Text="Printer and footer come from Invoice Settings. Layout is saved per outlet (or globally)."/>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">

                <!-- Your original Sale commands are kept to avoid breaking existing flows -->
                <Button Content="Save (Sale)" Height="26" MinWidth="90"
                        Command="{Binding SaveSaleCommand}"
                        Margin="0,0,8,0"/>
                <Button Content="Print Test (Sale)" Height="26" MinWidth="110"
                        Command="{Binding PrintSaleCommand}"
                        Margin="0,0,16,0"/>

                <!-- New: single save-all + print-current-tab -->
                <Button Content="Save All" Height="26" MinWidth="100"
                        Command="{Binding SaveAllCommand}"
                        Margin="0,0,8,0"/>
                <Button Content="Print Test (Current Tab)" Height="26" MinWidth="150"
                        Command="{Binding PrintCurrentCommand}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
