<UserControl x:Class="Pos.Client.Wpf.Windows.Purchases.PurchaseCenterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- Commands (similar to Sales) -->
        <RoutedUICommand x:Key="CmdReceive"      Text="Receive"/>
        <RoutedUICommand x:Key="CmdAmend"        Text="Amend"/>
        <RoutedUICommand x:Key="CmdReturn"       Text="Return"/>
        <RoutedUICommand x:Key="CmdVoid"         Text="Void"/>
        <RoutedUICommand x:Key="CmdHeld"         Text="Held Drafts"/>

        <!-- Badge colors -->
        <SolidColorBrush x:Key="BadgeBorder"  Color="#D0D0D0"/>
        <SolidColorBrush x:Key="BadgeDraft"   Color="#FFF9C4"/>
        <SolidColorBrush x:Key="BadgeSale"    Color="#C8E6C9"/>
        <SolidColorBrush x:Key="BadgeVoided"  Color="#E0E0E0"/>

        <!-- Return icon color (↩ + document/slash) -->
        <SolidColorBrush x:Key="ReturnIconBrush" Color="#C2185B"/>
      
    </UserControl.Resources>

    <!-- Keyboard shortcuts -->
    <UserControl.InputBindings>
        <KeyBinding Key="F2" Command="{x:Static ApplicationCommands.Find}"/>
        <KeyBinding Key="E" Modifiers="Alt" Command="{StaticResource CmdAmend}"/>
        <KeyBinding Key="R" Modifiers="Alt" Command="{StaticResource CmdReturn}"/>
        <KeyBinding Key="Delete" Command="{StaticResource CmdVoid}"/>
        <KeyBinding Key="F6" Command="{StaticResource CmdReceive}"/>
        <KeyBinding Key="F8" Command="{StaticResource CmdHeld}"/>
    </UserControl.InputBindings>

    <!-- Wire handlers -->
    <UserControl.CommandBindings>
        <CommandBinding Command="{x:Static ApplicationCommands.Find}" Executed="Search_Executed"/>
        <CommandBinding Command="{StaticResource CmdAmend}"   Executed="Amend_Executed"/>
        <CommandBinding Command="{StaticResource CmdReturn}"  Executed="Return_Executed"/>
        <CommandBinding Command="{StaticResource CmdVoid}"    Executed="Void_Executed"/>
        <CommandBinding Command="{StaticResource CmdReceive}" Executed="Receive_Executed"/>
        <CommandBinding Command="{StaticResource CmdHeld}"    Executed="Held_Executed"/>
    </UserControl.CommandBindings>

    <Grid Margin="12">
              
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        
        <!-- Top bar: search + date + dropdown filter -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="SearchBox" Width="220" Height="28" VerticalContentAlignment="Center"
                     ToolTip="Doc #, Supplier name, Vendor Inv #"/>

            <TextBlock Text=" From:" VerticalAlignment="Center" Margin="12,0,6,0"/>
            <DatePicker x:Name="FromDate" Width="140"/>
            <TextBlock Text=" To:" VerticalAlignment="Center" Margin="12,0,6,0"/>
            <DatePicker x:Name="ToDate" Width="140"/>

            <!-- Compact filter dropdown, same pattern as Sales -->
            <Grid Margin="12,0,0,0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ToggleButton x:Name="BtnFilter" Grid.Column="0" Height="28" Padding="10,0"
                              Content="Filter ▾"
                              IsChecked="{Binding IsOpen, ElementName=PopupFilter, Mode=TwoWay}"
                              ToolTip="Open filters"/>

                <Popup x:Name="PopupFilter" Placement="Bottom" PlacementTarget="{Binding ElementName=BtnFilter}"
                       StaysOpen="False" AllowsTransparency="True" Focusable="False">
                    <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="10">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.25"/>
                        </Border.Effect>
                        <StackPanel MinWidth="420">
                            <TextBlock Text="Filter purchases" FontWeight="Bold" Margin="0,0,0,8"/>

                            <!-- Status -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="Status:" Width="70" VerticalAlignment="Center"/>
                                <CheckBox x:Name="ChkFinal"  Content="Final"   IsChecked="True"  Margin="0,0,10,0"/>
                                <CheckBox x:Name="ChkDraft"  Content="Draft"   IsChecked="True"  Margin="0,0,10,0"/>
                                <CheckBox x:Name="ChkVoided" Content="Voided"  IsChecked="False"/>
                            </StackPanel>

                            <!-- Invoice number present? -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <CheckBox x:Name="ChkOnlyWithDocNo" Content="Only with Doc #" IsChecked="True"
                                          ToolTip="Hide missing/null document numbers by default"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Clear" Width="80" Margin="0,0,8,0" Click="ClearFilter_Click"/>
                                <Button Content="Apply" Width="80" Click="ApplyFilter_Click" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>

            <Button Content="Search _F2" Width="120" Height="28" Margin="12,0,0,0"
                    Click="Search_Click" Style="{StaticResource Btn.GlobalSecondary}"/>
        </StackPanel>

        <!-- Middle: list | details (same layout as Sales) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1.75*" />
            </Grid.ColumnDefinitions>

            <!-- Left list -->
            <DataGrid x:Name="PurchasesGrid"
                      Grid.Column="0"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionChanged="PurchasesGrid_SelectionChanged"
                      RowHeaderWidth="0"
                      FontSize="13"
                      HeadersVisibility="Column"
                      HorizontalScrollBarVisibility="Disabled">

                <DataGrid.Resources>
                    <BooleanToVisibilityConverter x:Key="BoolToVis"/>
                    <Style x:Key="StatusBadge" TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                        <Setter Property="Padding" Value="2,0"/>
                        <Setter Property="Margin" Value="8,0,0,0"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BadgeBorder}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Background" Value="#F3F3F3"/>

                        <Style.Triggers>
                            <!-- Final -> green -->
                            <DataTrigger Binding="{Binding Status}" Value="Final">
                                <Setter Property="Background" Value="{StaticResource BadgeSale}"/>
                            </DataTrigger>

                            <!-- Draft -> pale yellow -->
                            <DataTrigger Binding="{Binding Status}" Value="Draft">
                                <Setter Property="Background" Value="{StaticResource BadgeDraft}"/>
                            </DataTrigger>

                            <!-- Voided -> grey -->
                            <DataTrigger Binding="{Binding Status}" Value="Voided">
                                <Setter Property="Background" Value="{StaticResource BadgeVoided}"/>
                                <Setter Property="Opacity" Value="0.9"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <!-- COMPACT “Purchase” column, mirroring sales -->
                    <DataGridTemplateColumn Header="Purchase" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2,0,2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Line 1: DocNo/Id   Rev?   [Status]   ↩ + doc/slash -->
                                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                                        <TextBlock FontWeight="SemiBold">
                                            <Run Text="{Binding DocNoOrId}"/>
                                            <InlineUIContainer>
                                                <TextBlock Text="{Binding Revision, StringFormat=  Rev {0}}"
                                                           Visibility="{Binding HasRevisions, Converter={StaticResource BoolToVis}}"/>
                                            </InlineUIContainer>
                                        </TextBlock>

                                        <Border Style="{StaticResource StatusBadge}">
                                            <TextBlock Text="{Binding Status}" FontSize="11" Margin="4,0,4,0"/>
                                        </Border>

                                        <!-- Return icon cluster -->
                                        <!-- Return visuals: arrow always for returns; invoice icon only when with-invoice -->
                                        <StackPanel Orientation="Horizontal" Margin="6,0,0,0" VerticalAlignment="Center">
                                            <!-- ↩ shown for any return -->
                                            <TextBlock Text="↩"
             Foreground="{StaticResource ReturnIconBrush}"
             Visibility="{Binding IsReturn, Converter={StaticResource BoolToVis}}"
             Margin="0,0,4,0"/>

                                            <!-- Invoice icon shown only when return is WITH invoice -->
                                            <Viewbox Width="12" Height="12" Stretch="Uniform"
           Visibility="{Binding IsReturnWithInvoice, Converter={StaticResource BoolToVis}}">
                                                <Canvas Width="24" Height="24">
                                                    <!-- Neuicons “document” path (MIT) -->
                                                    <Path Fill="{StaticResource ReturnIconBrush}"
            Data="M21,1 H3 A1,1 0 0 0 2,2 V22 a1,1 0 0 0 1,1 H17
                  a1.011,1.011 0 0 0 0.383,-0.077
                  a1,1 0 0 0 0.325,-0.217 l4,-4
                  A1.131,1.131 0 0 0 22,18 V2 A1,1 0 0 0 21,1 Z
                  M16,18 v3 H4 V3 H20 V17 H17 A1,1 0 0 0 16,18 Z
                  M17,10 a1,1 0 0 1 -1,1 H8 A1,1 0 0 1 8,9 h8 A1,1 0 0 1 17,10 Z
                  M13,14 a1,1 0 0 1 -1,1 H8 a1,1 0 0 1 0,-2 h4 A1,1 0 0 1 13,14 Z"/>
                                                </Canvas>
                                            </Viewbox>
                                        </StackPanel>

                                    </StackPanel>

                                    <!-- Line 2: Supplier • Ts -->
                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               Foreground="#666"
                                               FontSize="12"
                                               TextTrimming="CharacterEllipsis">
                                        <Run Text="{Binding Supplier}"/>
                                        <Run Text=" • "/>
                                        <Run Text="{Binding TsLocal}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Keep a narrow Grand Total column, right-aligned -->
                    <DataGridTextColumn Header="Grand"
                                        Binding="{Binding GrandTotal, StringFormat=0.00}"
                                        Width="95">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="TextAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>

            <Separator Grid.Column="1" Margin="8,0" Width="1" Background="#DDD"/>

            <!-- Right details -->
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="33*"/>
                    <ColumnDefinition Width="89*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="HeaderText" FontSize="16" FontWeight="Bold" Margin="0,0,0,8" Grid.ColumnSpan="2"/>

                <DataGrid x:Name="LinesGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Grid.ColumnSpan="2" Margin="0,29,0,0" Grid.RowSpan="2">
                    <DataGrid.Columns>
                        
                        <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="120"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" Width="*"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Qty}" Width="60"/>
                        <DataGridTextColumn Header="Cost" Binding="{Binding UnitCost, StringFormat=0.00}" Width="80"/>
                        <DataGridTextColumn Header="Line Total" Binding="{Binding LineTotal, StringFormat=0.00}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <Border Grid.Row="2" BorderBrush="#DDD" Padding="0,8,0,0">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button x:Name="BtnHeld" Content="_Held (F8)" Width="140" Height="34" Margin="0,0,8,0"
                           Click="BtnHeld_Click" Style="{StaticResource Btn.GlobalPrimary}" Visibility="Collapsed"/>
                    <!-- Return doc actions (when a selected row is a Purchase Return) -->
                    <Button x:Name="BtnAmendReturn" Content="_Amend Return (F4)" Width="150" Height="34" Margin="0,0,8,0"
                            Click="AmendReturn_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
                    <Button x:Name="BtnVoidReturn"  Content="_Void Return (F3)"  Width="150" Height="34" Margin="0,0,8,0"
                            Click="VoidReturn_Click"  Style="{StaticResource Btn.GlobalPrimary}"/>
                    <!-- Base purchase actions -->
                    <Button x:Name="BtnAmend"   Content="_Amend (Rev) (F2)" Width="150" Height="34" Margin="0,0,8,0"
                            Click="Amend_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
                    <Button x:Name="BtnVoidPurchase" Content="_Void Purchase(F9)" Width="150" Height="34" Margin="0,0,8,0"
                            Click="VoidPurchase_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
                    <!-- Returns to supplier -->
                    <Button x:Name="BtnReturnWith" Content="Ret_urn Invoice(F8)" Width="150" Height="34" Margin="0,0,8,0"
                            Click="ReturnWith_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
                    <Button x:Name="BtnReturnWithout" Content="Ret. w/o Invoice(F7)" Width="150" Height="34"
                            Click="ReturnWithout_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
                    <!-- Receive finalization -->
                    <Button x:Name="BtnReceive" Content="_Receive (F6)" Width="150" Height="34" Margin="8,0,0,0"
                            Click="Receive_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
                </StackPanel>
                <TextBlock VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

      
      

    </Grid>
</UserControl>
