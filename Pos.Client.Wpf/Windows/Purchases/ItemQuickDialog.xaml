<Window x:Class="Pos.Client.Wpf.Windows.Purchases.ItemQuickDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Item" Width="520" Height="560"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Required basics -->
                <TextBlock Text="SKU *" FontWeight="SemiBold"/>
                <TextBox x:Name="SkuBox" Margin="0,4,0,10"/>

                <TextBlock Text="Name *" FontWeight="SemiBold"/>
                <TextBox x:Name="NameBox" Margin="0,4,0,10"/>

                <!-- Non-nullable in your entity; allow empty string -->
                <TextBlock Text="Barcode" FontWeight="SemiBold"/>
                <TextBox x:Name="BarcodeBox" Margin="0,4,0,10"/>

                <TextBlock Text="Retail Price" FontWeight="SemiBold"/>
                <TextBox x:Name="PriceBox" Text="0" Margin="0,4,0,14"/>

                <!-- Tax block -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Default Tax %" FontWeight="SemiBold"/>
                        <TextBox x:Name="TaxPctBox" Text="0" Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <TextBlock Text="Tax Code" FontWeight="SemiBold"/>
                        <TextBox x:Name="TaxCodeBox" Text="STD" Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="12,0,0,0" Orientation="Horizontal" VerticalAlignment="Bottom">
                        <CheckBox x:Name="TaxInclusiveBox" Content="Tax Inclusive (price includes tax)" />
                    </StackPanel>
                </Grid>

                <!-- Discount defaults -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Default Discount %" FontWeight="SemiBold"/>
                        <TextBox x:Name="DiscPctBox" Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <TextBlock Text="Default Discount Amount" FontWeight="SemiBold"/>
                        <TextBox x:Name="DiscAmtBox" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Variant axes (optional) -->
                <TextBlock Text="Variant Axis 1 (optional)" FontWeight="SemiBold"/>
                <Grid Margin="0,4,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="Var1NameBox"/>
                    <TextBox x:Name="Var1ValueBox" Grid.Column="1" Margin="12,0,0,0"/>
                </Grid>

                <TextBlock Text="Variant Axis 2 (optional)" FontWeight="SemiBold"/>
                <Grid Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="Var2NameBox"/>
                    <TextBox x:Name="Var2ValueBox" Grid.Column="1" Margin="12,0,0,0"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="Save" Width="110" Margin="0,0,8,0" Click="Save_Click"/>
            <Button Content="Cancel" Width="110" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
