<UserControl x:Class="Pos.Client.Wpf.Windows.Sales.StockReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewTextInput="Window_PreviewTextInput">

    <DockPanel Margin="8">
        <!-- Toolbar -->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar x:Name="TopBar" Band="0" BandIndex="0">
                <!-- Search -->
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="SearchBox" Width="240" Height="28" VerticalContentAlignment="Center"
                 TextChanged="SearchBox_TextChanged"
                 PreviewKeyDown="SearchBox_PreviewKeyDown"
                 ToolTip="Type to filter; ↑/↓ to navigate"
                 Style="{StaticResource Txt.Search}"/>
                <Separator/>

                <!-- Mode: By Item / By Product (toggle group) -->
                <ToggleButton x:Name="ModeByItemBtn" Width="150" Height="28" Margin="0,0,8,0"
                      Checked="ModeByItem_Checked" Unchecked="ModeByItem_Unchecked">
                    <AccessText Text="By _Item (Alt+I)"/>
                </ToggleButton>
                <ToggleButton x:Name="ModeByProductBtn" Width="150" Height="28"
                      Checked="ModeByProduct_Checked" Unchecked="ModeByProduct_Unchecked">
                    <AccessText Text="By _Product (Alt+P)"/>
                </ToggleButton>

                <Separator/>

                <!-- Scope: visible only for Admin (we’ll set via code-behind) -->
                <StackPanel x:Name="ScopePanel" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Scope:" VerticalAlignment="Center" Margin="0,0,8,0"/>

                    <RadioButton x:Name="ScopeOutletBtn" Margin="0,0,12,0"
                          Checked="ScopeOutlet_Checked" Unchecked="ScopeOutlet_Unchecked"
                          ToolTip="Show stock by Outlet">
                        <TextBlock Text="Outlet"/>
                    </RadioButton>
                    <ComboBox x:Name="OutletBox" Width="220"
                      DisplayMemberPath="Name" SelectedValuePath="Id"
                      SelectionChanged="OutletBox_SelectionChanged"/>

                    <TextBlock Text="  " Width="16"/>

                    <RadioButton x:Name="ScopeWarehouseBtn" Margin="0,0,12,0"
                          Checked="ScopeWarehouse_Checked" Unchecked="ScopeWarehouse_Unchecked"
                          ToolTip="Show stock by Warehouse">
                        <TextBlock Text="Warehouse"/>
                    </RadioButton>
                    <ComboBox x:Name="WarehouseBox" Width="220"
                      DisplayMemberPath="Name" SelectedValuePath="Id"
                      SelectionChanged="WarehouseBox_SelectionChanged"/>
                </StackPanel>
            </ToolBar>
        </ToolBarTray>


        <!-- Grid -->
        <DataGrid x:Name="Grid" Style="{StaticResource ModernDataGrid}"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            HeadersVisibility="Column"
            GridLinesVisibility="Horizontal"
            SelectionMode="Single"
            SelectionUnit="FullRow"/>
    </DockPanel>

</UserControl>
