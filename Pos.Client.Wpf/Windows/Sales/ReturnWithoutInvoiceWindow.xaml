<Window x:Class="Pos.Client.Wpf.Windows.Sales.ReturnWithoutInvoiceWindow"
        x:Name="ReturnWindowRoot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Controls="clr-namespace:Pos.Client.Wpf.Controls"
        mc:Ignorable="d"
        Title="POS — Return (No Invoice)" Height="768" Width="1024"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Till bar -->
            <RowDefinition Height="Auto"/>
            <!-- Scan bar -->
            <RowDefinition Height="*"/>
            <!-- Cart -->
            <RowDefinition Height="Auto"/>
            <!-- Totals -->
        </Grid.RowDefinitions>

        <!-- ===== Row 0: TILL BAR (matches Sale) ===== -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Left: Till status + invoice/date -->
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <TextBlock Text="Till:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock x:Name="TillStatusText" VerticalAlignment="Center" Margin="0,0,12,0"/>

                <TextBlock Text="   |   " VerticalAlignment="Center" Foreground="#999" Margin="8,0,8,0"/>

                <TextBlock Text="Return #:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBlock x:Name="InvoicePreviewText" VerticalAlignment="Center" FontWeight="Bold" />

                <TextBlock Text="   " />
                <TextBlock Text="Date:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBlock x:Name="InvoiceDateText" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Right: Customer snapshot + Reason (same position as sale customer fields) -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                <CheckBox x:Name="WalkInCheck" Content="Walk-in Customer" IsChecked="True"
                          Checked="WalkInCheck_Changed" Unchecked="WalkInCheck_Changed" VerticalAlignment="Center"/>
                <TextBlock Text="Name:" VerticalAlignment="Center" Margin="6,0,6,0"/>
                <TextBox x:Name="CustNameBox" Width="180" Height="28" VerticalContentAlignment="Center"/>
                <TextBlock Text="   Phone:" VerticalAlignment="Center" Margin="6,0,6,0"/>
                <TextBox x:Name="CustPhoneBox" Width="130" Height="28" VerticalContentAlignment="Center"/>
                <TextBlock Text="   Reason:" VerticalAlignment="Center" Margin="10,0,6,0"/>
                <TextBox x:Name="ReasonBox" Width="220" Height="28" VerticalContentAlignment="Center" />
            </StackPanel>
        </Grid>

        <!-- ===== Row 1: SCAN BAR (matches Sale) ===== -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- LEFT: Scan/Search + Add -->
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <TextBlock Text="Scan / Search:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <Controls:ItemSearchBox
                    x:Name="ItemSearch"
                    Margin="0,0,8,0"
                    ItemPicked="ItemSearch_ItemPicked"/>
            </StackPanel>

            <!-- RIGHT: Cashier → Salesman (mirrors sale) -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                <TextBlock Text="Cashier:" VerticalAlignment="Center" Margin="16,0,6,0"/>
                <TextBlock x:Name="CashierNameText" VerticalAlignment="Center" FontWeight="Bold"/>

                <TextBlock Text="   Salesman:" VerticalAlignment="Center" Margin="12,0,6,0"/>
                <ComboBox x:Name="SalesmanBox"
                          Width="180"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="Id"
                          SelectionChanged="SalesmanBox_SelectionChanged"/>
            </StackPanel>
            
        </Grid>

        <!-- ===== Row 2: CART (same grid/columns) ===== -->
        <DataGrid x:Name="CartGrid" Grid.Row="2" AutoGenerateColumns="False" SnapsToDevicePixels="True"
          EnableRowVirtualization="True"
          ScrollViewer.CanContentScroll="True"
                  IsReadOnly="False" CanUserAddRows="False"
                  HeadersVisibility="Column" VerticalContentAlignment="Center" FontSize="16" FontWeight="DemiBold">
            <DataGrid.Resources>
                <Style x:Key="NumericRightAligned" TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Right"/>
                    <Setter Property="TextAlignment" Value="Right"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="SKU"      Binding="{Binding Sku}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name"     Binding="{Binding DisplayName}" Width="2*" IsReadOnly="True"/>

                <!-- Return Qty +/- -->
                <DataGridTemplateColumn Header="Ret.Qty" Width="110">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="−" Width="24" Height="24" Padding="0" Click="QtyMinus_Click" Tag="{Binding}" />
                                <TextBlock Text="{Binding Qty}" Width="36" TextAlignment="Center" VerticalAlignment="Center" Margin="4,0"/>
                                <Button Content="+" Width="24" Height="24" Padding="0" Click="QtyPlus_Click" Tag="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Price"    Binding="{Binding UnitPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="90" ElementStyle="{StaticResource NumericRightAligned}"/>
                <DataGridTextColumn Header="Disc %"   Binding="{Binding DiscountPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80" ElementStyle="{StaticResource NumericRightAligned}"/>
                <DataGridTextColumn Header="Disc Amt" Binding="{Binding DiscountAmt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="90" ElementStyle="{StaticResource NumericRightAligned}"/>
                <DataGridTextColumn Header="Tax %"    Binding="{Binding TaxRatePct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="70" ElementStyle="{StaticResource NumericRightAligned}"/>

                <DataGridTextColumn Header="Line Tax"
                                    Binding="{Binding LineTax, StringFormat={}{0:N2}}"
                                    Width="90" IsReadOnly="True" ElementStyle="{StaticResource NumericRightAligned}"/>
                <DataGridTextColumn Header="Line Total"
                                    Binding="{Binding LineTotal, StringFormat={}{0:N2}}"
                                    Width="110" IsReadOnly="True" ElementStyle="{StaticResource NumericRightAligned}"/>

                <!-- Delete line -->
                <DataGridTemplateColumn Header="" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="🗑" Width="28" Height="24" Padding="-1"
                                    Click="DeleteLine_Click" Tag="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ===== Row 3: TOTALS & REFUND (same layout) ===== -->
        <Border Grid.Row="3" Margin="0,12,0,0" Padding="12"
                BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Background="#FAFAFA">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0: 3 Columns -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Col 1: invoice discounts + footer -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="Inv Disc %:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBox x:Name="InvDiscPctBox" Width="60" Height="28" VerticalContentAlignment="Center" TextChanged="InvoiceDiscountChanged"/>
                            <TextBlock Text="   Inv Disc Amt:" VerticalAlignment="Center" Margin="10,0,6,0"/>
                            <TextBox x:Name="InvDiscAmtBox" Width="90" Height="28" VerticalContentAlignment="Center" TextChanged="InvoiceDiscountChanged"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Return Footer:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBox x:Name="FooterBox" Width="300" Height="28" VerticalContentAlignment="Center" TextChanged="FooterBox_TextChanged"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Col 2: items & total qty -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Items:" FontSize="14" Width="120"/>
                            <TextBlock x:Name="ItemsCountText" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total Qty:" FontSize="14" Width="120"/>
                            <TextBlock x:Name="QtySumText" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Col 3: totals identical layout -->
                    <Grid Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,0,0" Width="240">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="110" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Subtotal:" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Discount:" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right" />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Tax:"      FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right" />

                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SubtotalText" FontSize="14" FontWeight="DemiBold" HorizontalAlignment="Stretch" TextAlignment="Right"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DiscountText" FontSize="14" FontWeight="DemiBold" Foreground="#10893E" HorizontalAlignment="Stretch" TextAlignment="Right"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TaxText"      FontSize="14" FontWeight="DemiBold" HorizontalAlignment="Stretch" TextAlignment="Right"/>

                        <Border Grid.Row="3" Grid.ColumnSpan="2" Margin="0,6,0,0" BorderBrush="#EEE" BorderThickness="0,1,0,0"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Refund:" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Right" />
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TotalText" FontSize="18" FontWeight="Bold" Foreground="red" HorizontalAlignment="Stretch" TextAlignment="Right"/>
                    </Grid>
                </Grid>

                <!-- Row 1: Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button Content="Clear (F5)" Height="40" Width="150" Margin="12,0,0,0"
                            Click="ClearButton_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
                    <Button Content="Refund (F9)" Height="40" Width="150" Margin="12,0,0,0"
                            Click="RefundButton_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
                    <Button Content="Close" Height="40" Width="120" Margin="12,0,0,0"
                            IsCancel="True" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
