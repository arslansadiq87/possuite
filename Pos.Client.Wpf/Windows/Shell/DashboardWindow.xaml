<Window x:Class="Pos.Client.Wpf.Windows.Shell.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POS — Dashboard" Height="720" Width="1024" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Top toolbar (unchanged) -->
        <ToolBar DockPanel.Dock="Top">
            <Button Content="New Sale" Click="NewSale_Click"/>
            <Separator/>
            <Button Content="New Purchase" Click="NewPurchase_Click"/>
            <Separator/>
            <Button Content="Products  &amp; Items" Click="OpenProductsItems_Click"/>
            <Button Content="Outlets/Counters" Click="OpenOutletsCounters_Click"/>
            <Button Content="Warehouse" Click="OpenWarehouses_Click"/>
            <Button Content="Users" Click="OpenUsers_Click"/>
            <Button Content="Customers &amp; Suppliers" Click="OpenParties_Click"/>
            <Button Content="Inventory Transfer" Click="NewTransfer_Click"/>
            <Button Content="Sample" Click="OpenSamples_Click"/>
            <Separator/>
        </ToolBar>

        <!-- NEW bottom status bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="#f2f6ff" Padding="6">
            <StatusBarItem BorderThickness="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Left: outlet / counter / till status (names) -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding OutletName}" FontWeight="SemiBold"/>
                        <TextBlock Text=" · " />
                        <TextBlock Text="{Binding CounterName}"/>
                        <TextBlock Text=" · " />
                        <TextBlock Text="{Binding TillStatus}"/>
                    </StackPanel>

                    <!-- Middle: connectivity -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0">
                        <TextBlock Text="{Binding OnlineText}" />
                        <TextBlock Text=" | " Margin="4,0"/>
                        <TextBlock Text="{Binding LastSyncText}" />
                    </StackPanel>

                    <!-- Right: user (names only). IDs available on hover -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal"
                        ToolTip="{Binding CurrentOutletId, StringFormat=OutletId: {0}}">
                        <TextBlock Text="User: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding CurrentUserName}"/>

                        <TextBlock Text="   •   Outlet: " FontWeight="SemiBold" Margin="8,0,0,0"/>
                        <TextBlock Text="{Binding OutletName}"/>
                        <TextBlock Text="   •   Counter: " FontWeight="SemiBold" Margin="8,0,0,0"/>
                        <TextBlock Text="{Binding CounterName}"/>

                    </StackPanel>
                </Grid>
            </StatusBarItem>
        </StatusBar>


        <!-- Main content (unchanged, except we removed the old quick-info border at Grid.Row=2) -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="109*"/>
                <ColumnDefinition Width="26*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.ColumnSpan="2">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <!-- removed the quick info row -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- KPI Cards -->
                    <UniformGrid Grid.Row="0" Columns="4" Margin="0,0,0,8">
                        <!-- Today Sales -->
                        <Border CornerRadius="10" BorderBrush="#dde3ee" BorderThickness="1" Padding="12" Background="White" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Today Sales" Foreground="#5f6b7a" FontSize="12"/>
                                <TextBlock Text="{Binding TodaySalesFormatted}" FontSize="22" FontWeight="Bold" Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding TodaySalesInvoicesText}" Foreground="#8a94a6" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <!-- Today Returns -->
                        <Border CornerRadius="10" BorderBrush="#dde3ee" BorderThickness="1" Padding="12" Background="White" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Today Returns" Foreground="#5f6b7a" FontSize="12"/>
                                <TextBlock Text="{Binding TodayReturnsFormatted}" FontSize="22" FontWeight="Bold" Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding TodayReturnsCountText}" Foreground="#8a94a6" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <!-- Low stock -->
                        <Border CornerRadius="10" BorderBrush="#dde3ee" BorderThickness="1" Padding="12" Background="White" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Low Stock Items" Foreground="#5f6b7a" FontSize="12"/>
                                <TextBlock Text="{Binding LowStockCount}" FontSize="22" FontWeight="Bold" Margin="0,4,0,0"/>
                                <TextBlock Text="below reorder level" Foreground="#8a94a6" FontSize="11"/>
                            </StackPanel>
                        </Border>

                        <!-- Shift cash -->
                        <Border CornerRadius="10" BorderBrush="#dde3ee" BorderThickness="1" Padding="12" Background="White" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Shift Cash" Foreground="#5f6b7a" FontSize="12"/>
                                <TextBlock Text="{Binding ShiftCashFormatted}" FontSize="22" FontWeight="Bold" Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding ShiftHint}" Foreground="#8a94a6" FontSize="11"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Bottom grid: Recent sales + Low stock list -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Recent invoices -->
                        <Border CornerRadius="10" BorderBrush="#dde3ee" BorderThickness="1" Background="White" Padding="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Recent Invoices" FontWeight="SemiBold" Margin="4,0,0,6"/>
                                <DataGrid Grid.Row="1" ItemsSource="{Binding RecentInvoices}" AutoGenerateColumns="False"
                                      CanUserAddRows="False" HeadersVisibility="Column" IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="#" Binding="{Binding InvoiceNo}" Width="80"/>
                                        <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                                        <DataGridTextColumn Header="Total" Binding="{Binding TotalFormatted}" Width="100"/>
                                        <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="120"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>

                        <!-- spacer -->
                        <Grid Grid.Column="1"/>

                        <!-- Low stock -->
                        <Border Grid.Column="2" CornerRadius="10" BorderBrush="#dde3ee" BorderThickness="1" Background="White" Padding="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Low Stock" FontWeight="SemiBold" Margin="4,0,0,6"/>
                                <DataGrid Grid.Row="1" ItemsSource="{Binding LowStockItems}" AutoGenerateColumns="False"
                                      CanUserAddRows="False" HeadersVisibility="Column" IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="100"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Qty" Binding="{Binding Qty}" Width="60"/>
                                        <DataGridTextColumn Header="Reorder" Binding="{Binding ReorderLevel}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </DockPanel>

</Window>
