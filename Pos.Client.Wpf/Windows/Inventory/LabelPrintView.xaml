<UserControl x:Class="Pos.Client.Wpf.Windows.Inventory.LabelPrintView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Pos.Client.Wpf.Controls">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER / TOOLBAR -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
            <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                <TextBlock Text="Label Printing" FontSize="18" FontWeight="SemiBold"/>
                <TextBlock Text="Print barcode labels from purchase invoices or directly by item."
                           Margin="0,2,0,0"
                           Foreground="#666"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                
               
            </StackPanel>
        </DockPanel>

        <!-- MAIN CONTENT -->
        <TabControl Grid.Row="1" x:Name="ModeTabs">
            <!-- TAB 1: BY PURCHASE -->
            <TabItem Header="By Purchase">
                <Grid Margin="0,4,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filters -->
                    <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox x:Name="SearchBox"
                                 Width="220"
                                 Height="28"
                                 VerticalContentAlignment="Center"
                                 ToolTip="Doc # or Supplier"/>

                        <TextBlock Text=" From:"
                                   VerticalAlignment="Center"
                                   Margin="12,0,6,0"/>
                        <DatePicker x:Name="FromDate" Width="140"/>

                        <TextBlock Text=" To:"
                                   VerticalAlignment="Center"
                                   Margin="12,0,6,0"/>
                        <DatePicker x:Name="ToDate" Width="140"/>

                        <Button Content="Search"
                                Width="90"
                                Margin="12,0,0,0"
                                Click="SearchPurchases_Click"/>
                        <Button x:Name="BtnPrintFromPurchase"
        Content="Print Labels (Purchase)"
        Width="170"
        Margin="4,0,0,0"
        Click="PrintFromPurchase_Click"/>
                    </StackPanel>

                    <!-- Purchases grid (NO COST COLUMNS) -->
                    <DataGrid x:Name="PurchasesGrid" Style="{DynamicResource ModernDataGrid}"
                              Grid.Row="1"
                              Grid.Column="0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionChanged="PurchasesGrid_SelectionChanged"
                              RowHeaderWidth="0"
                              FontSize="13"
                              HeadersVisibility="Column"
                              HorizontalScrollBarVisibility="Disabled">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Doc #"
                                                Binding="{Binding DocNoOrId}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Supplier"
                                                Binding="{Binding Supplier}"
                                                Width="2*"/>
                            <DataGridTextColumn Header="Date/Time"
                                                Binding="{Binding TsLocal}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Status"
                                                Binding="{Binding Status}"
                                                Width="0.9*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Lines grid (items for selected purchase; STILL NO COST) -->
                    <DataGrid x:Name="LinesGrid" Style="{DynamicResource ModernDataGrid}"
                              Grid.Row="1"
                              Grid.Column="1"
                              Margin="8,0,0,0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              RowHeaderWidth="0"
                              FontSize="13"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="SKU"
                                                Binding="{Binding Sku}"
                                                Width="*"
                                                IsReadOnly="True"/>
                            <!-- NEW: barcode code that will be printed -->
                            <DataGridTextColumn Header="Barcode"
                                                Binding="{Binding Barcode}"
                                                Width="1.2*"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Header="Item"
                                                Binding="{Binding DisplayName}"
                                                Width="2*"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Header="Price"
                                                Binding="{Binding Price, StringFormat=0.00}"
                                                Width="0.8*"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Header="Qty"
                                                Binding="{Binding Qty, StringFormat=0.##}"
                                                Width="0.7*"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Header="Print Qty"
                                                Binding="{Binding PrintQty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Width="0.8*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB 2: BY ITEM -->
            <TabItem Header="By Item">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,8,0,0">

                        <!-- Item search -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Item:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <ctrls:ItemSearchBox x:Name="ItemSearch"
                                     Width="320"
                                     ItemPicked="ItemSearch_ItemPicked"/>
                        </StackPanel>

                        <!-- Selected item details + Clear -->
                        <Border BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="8"
                    Margin="0,8,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <TextBlock Text="Name:" FontWeight="SemiBold" Width="70"/>
                                        <TextBlock x:Name="LblItemName"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <TextBlock Text="SKU:" FontWeight="SemiBold" Width="70"/>
                                        <TextBlock x:Name="LblItemSku"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <TextBlock Text="Barcode:" FontWeight="SemiBold" Width="70"/>
                                        <TextBlock x:Name="LblItemBarcode"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Price:" FontWeight="SemiBold" Width="70"/>
                                        <TextBlock x:Name="LblItemPrice"/>
                                    </StackPanel>
                                </StackPanel>

                                <Button Grid.Column="1"
                            x:Name="BtnClearItem"
                            Content="Clear"
                            Width="70"
                            Margin="8,0,0,0"
                            Click="ClearItemSelection_Click"/>
                            </Grid>
                        </Border>

                        <!-- Print quantity + button -->
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <TextBlock Text="Print Qty:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBox x:Name="ItemPrintQtyBox"
                         Width="80"
                         Height="26"
                         VerticalContentAlignment="Center"
                         Text="1"/>
                            <Button x:Name="BtnPrintFromItem"
                        Content="Print Labels"
                        Width="120"
                        Margin="12,0,0,0"
                        Click="PrintFromItem_Click"/>
                        </StackPanel>

                        <!-- Barcode preview -->
                        <Border BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="8"
                    Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="Barcode preview"
                               FontWeight="SemiBold"
                               Margin="0,0,0,4"/>
                                <Image x:Name="ItemBarcodePreview"
                           Height="80"
                           Stretch="Uniform"/>
                            </StackPanel>
                        </Border>

                        <!-- NEW: TSC Printer Tools (same as in BarcodeLabelSettingsPage) -->
                        <Expander Header="Printer Tools (TSC)"
                      Margin="0,8,0,0"
                      IsExpanded="True"
                      DataContext="{Binding TscVm, RelativeSource={RelativeSource AncestorType=UserControl}}"
                      Visibility="{Binding IsTscSelected, Converter={StaticResource BoolToVis}}">
                            <StackPanel Margin="8,6,8,8" Orientation="Vertical">

                                <!-- MOTION -->
                                <GroupBox Header="Motion" Margin="0,0,0,8">
                                    <StackPanel Orientation="Horizontal" Margin="8">
                                        <TextBlock Text="Nudge (mm):" VerticalAlignment="Center"/>
                                        <TextBox Width="60" Margin="8,0,12,0"
                                     Text="{Binding NudgeMm, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.0}}"/>
                                        <Button Content="⬆ Forward"  Width="110" Margin="0,0,8,0"
                                    Command="{Binding TscFeedMmCommand}"/>
                                        <Button Content="⬇ Backward" Width="110" Margin="0,0,8,0"
                                    Command="{Binding TscBackfeedMmCommand}"/>
                                        <Button Content="Next Label" Width="110" Margin="0,0,8,0"
                                    Command="{Binding TscNextLabelCommand}"/>
                                        <Button Content="Home" Width="90" Margin="0,0,8,0"
                                    Command="{Binding TscHomeCommand}"/>
                                        <Button Content="Auto Detect" Width="120"
                                    Command="{Binding TscAutodetectCommand}"/>
                                    </StackPanel>
                                </GroupBox>
                              

                                <!-- QUICK LABEL -->
                                <GroupBox Header="Quick Label (TSPL direct)" Margin="0,0,0,8">
                                    <Grid Margin="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Text:" VerticalAlignment="Center"/>
                                        <TextBox   Grid.Row="0" Grid.Column="1" Margin="8,0,0,0"
                                       Text="{Binding QuickText, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Barcode Type:" VerticalAlignment="Center"/>
                                        <ComboBox  Grid.Row="0" Grid.Column="3" Width="140" Margin="8,0,0,0"
                                       ItemsSource="{Binding QuickBarcodeTypes}"
                                       SelectedItem="{Binding QuickBarcodeType}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Barcode Data:" VerticalAlignment="Center"/>
                                        <TextBox   Grid.Row="1" Grid.Column="1" Margin="8,0,0,0"
                                       Text="{Binding QuickBarcodeData, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Height (mm):" VerticalAlignment="Center"/>
                                        <TextBox   Grid.Row="1" Grid.Column="3" Width="100" Margin="8,0,0,0"
                                       Text="{Binding QuickBarcodeHeightMm, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Copies:" VerticalAlignment="Center"/>
                                        <TextBox   Grid.Row="2" Grid.Column="1" Width="80" Margin="8,0,0,0"
                                       Text="{Binding QuickCopies, UpdateSourceTrigger=PropertyChanged}"/>

                                        <Button Grid.Row="2" Grid.Column="3" Content="Print Quick Label"
                                    HorizontalAlignment="Right" Width="160"
                                    Command="{Binding TscQuickLabelCommand}"/>
                                    </Grid>
                                </GroupBox>

                                <!-- ADVANCED -->
                                <GroupBox Header="Advanced (experts)" Margin="0,0,0,8">
                                    <StackPanel Margin="8">
                                        <TextBlock Text="Use Apply to Printer to push SIZE/GAP/SPEED/DENSITY/DIRECTION/TEAR/PEEL/CODEPAGE to the device. Quick Label uses TSPL directly."
                                       Opacity=".7"/>
                                    </StackPanel>
                                </GroupBox>

                            </StackPanel>
                        </Expander>

                        <TextBlock Margin="0,12,0,0"
                       Foreground="#666"
                       Text="Tip: search or scan, confirm the item, tweak TSC media/motion if needed, then print labels."/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>


        </TabControl>

        <!-- FOOTER NOTE -->
        <TextBlock Grid.Row="2"
                   Margin="0,8,0,0"
                   Foreground="#666"
                   Text="Note: Print Qty only affects labels. It does not change stock or accounting."/>
    </Grid>
</UserControl>
