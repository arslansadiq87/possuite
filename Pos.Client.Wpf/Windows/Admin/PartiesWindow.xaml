<Window x:Class="Pos.Client.Wpf.Windows.Admin.PartiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Parties" Height="640" Width="980"
        WindowStartupLocation="CenterOwner"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="14">
        <!-- Top bar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchText" Width="260" Margin="0,0,8,0" 
                     TextChanged="SearchText_TextChanged"/>
            <CheckBox x:Name="OnlyActiveCheck" Content="Only Active" IsChecked="True" Margin="0,0,16,0"
                      Checked="FilterChanged" Unchecked="FilterChanged"/>
            <CheckBox x:Name="RoleCustomerCheck" Content="Customer" IsChecked="True" Margin="0,0,6,0"
                      Checked="FilterChanged" Unchecked="FilterChanged"/>
            <CheckBox x:Name="RoleSupplierCheck" Content="Supplier" IsChecked="True" Margin="0,0,16,0"
                      Checked="FilterChanged" Unchecked="FilterChanged"/>
            <Button Content="New (Ctrl+N)" Click="New_Click" Margin="0,0,6,0"/>
            <Button Content="Edit (Enter)" Click="Edit_Click" Margin="0,0,6,0"/>
            <Button Content="Close (Esc)" Click="Close_Click"/>
        </StackPanel>

        <!-- Grid -->
        <DataGrid x:Name="Grid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  MouseDoubleClick="Grid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Roles" Binding="{Binding RolesText}" Width="*" />
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                <DataGridTextColumn Header="Tax #" Binding="{Binding TaxNumber}" Width="*" />
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="70"/>
                <DataGridCheckBoxColumn Header="Shared" Binding="{Binding IsSharedAcrossOutlets}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
