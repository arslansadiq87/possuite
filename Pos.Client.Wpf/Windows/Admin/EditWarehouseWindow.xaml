<Window x:Class="Pos.Client.Wpf.Windows.Admin.EditWarehouseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warehouse" Height="360" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Code -->
        <TextBlock Text="Code" Grid.Row="0" Grid.Column="0" Margin="0,6,10,6" VerticalAlignment="Center"/>
        <TextBox x:Name="CodeBox" Grid.Row="0" Grid.Column="1" Margin="0,4"
                 MaxLength="16" />
        <!-- Name -->
        <TextBlock Text="Name" Grid.Row="1" Grid.Column="0" Margin="0,6,10,6" VerticalAlignment="Center"/>
        <TextBox x:Name="NameBox" Grid.Row="1" Grid.Column="1" Margin="0,4"
                 MaxLength="128" />
        <!-- Active -->
        <TextBlock Text="Active" Grid.Row="2" Grid.Column="0" Margin="0,6,10,6" VerticalAlignment="Center"/>
        <CheckBox x:Name="ActiveBox" Grid.Row="2" Grid.Column="1" Margin="0,6"/>
        <!-- City -->
        <TextBlock Text="City" Grid.Row="3" Grid.Column="0" Margin="0,6,10,6" VerticalAlignment="Center"/>
        <TextBox x:Name="CityBox" Grid.Row="3" Grid.Column="1" Margin="0,4" MaxLength="100"/>
        <!-- Phone -->
        <TextBlock Text="Phone" Grid.Row="4" Grid.Column="0" Margin="0,6,10,6" VerticalAlignment="Center"/>
        <TextBox x:Name="PhoneBox" Grid.Row="4" Grid.Column="1" Margin="0,4" MaxLength="50"/>
        <!-- Note -->
        <TextBlock Text="Note" Grid.Row="5" Grid.Column="0" Margin="0,6,10,6" VerticalAlignment="Top"/>
        <TextBox x:Name="NoteBox" Grid.Row="5" Grid.Column="1" Margin="0,4" Height="80"
                 AcceptsReturn="True" TextWrapping="Wrap" MaxLength="500"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Save" Width="100" Margin="0,0,8,0" Click="Save_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
            <Button Content="Cancel" Width="100" IsCancel="True" Style="{StaticResource Btn.GlobalPrimary}"/>
        </StackPanel>
    </Grid>
</Window>
