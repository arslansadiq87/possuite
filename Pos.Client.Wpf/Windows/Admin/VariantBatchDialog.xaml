<Window x:Class="Pos.Client.Wpf.Windows.Admin.VariantBatchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Variants" Width="540" Height="460" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock x:Name="ProductText" FontWeight="Bold" Margin="0,0,0,8"/>

            <!-- Axes -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0"
                   Text="Axis 1 Name" VerticalAlignment="Center"/>
                <TextBox   Grid.Column="1" Grid.Row="0"
                   x:Name="Axis1NameBox" Margin="8,0,0,0"/>

                <TextBlock Grid.Column="0" Grid.Row="1"
                   Text="Axis 1 Values (comma-separated)" VerticalAlignment="Center" Margin="0,8,0,0"/>
                <TextBox   Grid.Column="1" Grid.Row="1"
                   x:Name="Axis1ValuesBox" Margin="8,8,0,0"/>

                <TextBlock Grid.Column="0" Grid.Row="2"
                   Text="Axis 2 Name" VerticalAlignment="Center" Margin="0,8,0,0"/>
                <TextBox   Grid.Column="1" Grid.Row="2"
                   x:Name="Axis2NameBox" Margin="8,8,0,0"/>

                <TextBlock Grid.Column="0" Grid.Row="3"
                   Text="Axis 2 Values (comma-separated)" VerticalAlignment="Center" Margin="0,8,0,0"/>
                <TextBox   Grid.Column="1" Grid.Row="3"
                   x:Name="Axis2ValuesBox" Margin="8,8,0,0"/>
            </Grid>

            <Separator Margin="0,12,0,12"/>

            <!-- Default Price / Tax -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Default Price" VerticalAlignment="Center"/>
                <TextBox   Grid.Column="1" x:Name="PriceBox" Margin="8,0,0,0" Text="0"/>

                <TextBlock Grid.Column="2" Text="Tax %" VerticalAlignment="Center" Margin="8,0,0,0"/>
                <TextBox   Grid.Column="3" x:Name="TaxPctBox" Margin="8,0,0,0" Text="0"/>
            </Grid>

            <!-- Tax Code / Inclusive -->
            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Tax Code" VerticalAlignment="Center"/>
                <TextBox   Grid.Column="1" x:Name="TaxCodeBox" Margin="8,0,0,0" Text="STD"/>

                <CheckBox  Grid.Column="2" x:Name="TaxInclusiveBox" Content="Tax Inclusive"
                   Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </Grid>

            <!-- Discounts -->
            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Default Disc %" VerticalAlignment="Center"/>
                <TextBox   Grid.Column="1" x:Name="DiscPctBox" Margin="8,0,0,0"/>

                <TextBlock Grid.Column="2" Text="Default Disc Amt" VerticalAlignment="Center" Margin="8,0,0,0"/>
                <TextBox   Grid.Column="3" x:Name="DiscAmtBox" Margin="8,0,0,0"/>
            </Grid>
        </StackPanel>

        

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Create Variants" Width="140" Margin="0,0,8,0" Click="Create_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
        </StackPanel>
    </Grid>
</Window>
