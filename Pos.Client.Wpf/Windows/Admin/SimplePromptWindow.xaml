<Window x:Class="Pos.Client.Wpf.Windows.Common.SimplePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit" Height="280" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <DockPanel Margin="12">
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="FormHost" />
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" Width="80" Margin="0,0,8,0" Click="Ok_Click" Style="{StaticResource ModernButton}"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click" Style="{StaticResource ModernButton}"/>
        </StackPanel>
    </DockPanel>
</Window>
