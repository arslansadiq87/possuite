<Window x:Class="Pos.Client.Wpf.Windows.Admin.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Users" Height="520" Width="860" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
            <TextBlock Text="Users" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Style="{StaticResource ModernTextBlock}"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Refresh" Click="Refresh_Click" Margin="8,0,0,0" Width="70" Style="{StaticResource Btn.GlobalPrimary}"/>
                <Button Content="Add" Click="Add_Click" Margin="8,0,0,0" Width="70" Style="{StaticResource Btn.GlobalPrimary}"/>
                <Button Content="Edit" Click="Edit_Click" Margin="8,0,0,0" Width="70" Style="{StaticResource Btn.GlobalPrimary}"/>
                <Button Content="Delete" Click="Delete_Click" Margin="8,0,0,0" Width="70" Style="{StaticResource Btn.GlobalPrimary}"/>
                <Button Content="Outlet Assignments" Click="Assignments_Click" Margin="8,0,0,0" Width="150" Style="{StaticResource Btn.GlobalPrimary}"/>
            </StackPanel>
        </DockPanel>

        <DataGrid x:Name="UsersGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Style="{StaticResource ModernDataGrid}"  FontSize="16" FontWeight="DemiBold">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="1.2*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="120"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="70"/>
                <DataGridCheckBoxColumn Header="Admin" Binding="{Binding IsGlobalAdmin}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2" FontSize="12" Opacity="0.7" Text="Tip: Use 'Outlet Assignments' to set per-outlet roles (Manager, Cashier, etc.)." Style="{StaticResource ModernTextBlock}"/>
    </Grid>
</Window>
