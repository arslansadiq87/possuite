<UserControl x:Class="Pos.Client.Wpf.Windows.Admin.StaffView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FontSize="13">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="New"     Click="New_Click"    Padding="12,4"/>
            <Button Content="Edit"    Click="Edit_Click"   Padding="12,4" Margin="6,0,0,0"/>
            <Button Content="Delete"  Click="Delete_Click" Padding="12,4" Margin="6,0,0,0"/>
            <Separator/>
            <Button Content="Refresh" Click="Refresh_Click" Padding="12,4"/>
        </ToolBar>

        <DataGrid x:Name="Grid" Style="{StaticResource ModernDataGrid}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  Margin="8"
                  RowHeight="30">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code"      Binding="{Binding Code}"      Width="120"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}"  Width="*"/>
                <DataGridTextColumn Header="Join Date" Binding="{Binding JoinedOnUtc, StringFormat=d}" Width="140"/>
                <DataGridTextColumn Header="Salary"    Binding="{Binding BasicSalary}" Width="120"/>
                <DataGridCheckBoxColumn Header="Acts as Salesman" Binding="{Binding ActsAsSalesman}" Width="160"/>
            </DataGrid.Columns>

        </DataGrid>
    </DockPanel>
</UserControl>
