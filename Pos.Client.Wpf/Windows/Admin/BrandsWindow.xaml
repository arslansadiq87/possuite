<Window x:Class="Pos.Client.Wpf.Windows.Admin.BrandsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Brands" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        KeyDown="Window_KeyDown">
    <DockPanel Margin="12">
        <!-- Top bar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Grid.Column="0" Text="Search:" VerticalAlignment="Center" Margin="0,0,6,0" Style="{StaticResource ModernTextBlock}"/>
            <TextBox x:Name="SearchBox" Width="240" Margin="0,0,8,0" 
                     TextChanged="SearchBox_TextChanged" Style="{StaticResource Txt.Search}"/>
            <Button Content="Add" Width="90" Margin="0,0,8,0" Click="Add_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
            <Button x:Name="EditBtn" Content="Edit" Width="90" Margin="0,0,8,0" Click="Edit_Click" Style="{StaticResource Btn.GlobalPrimary}"/>

            <!-- Only one of these will be visible at a time -->
            <Button x:Name="DisableBtn" Content="Disable" Width="90" Margin="0,0,8,0"
            Visibility="Collapsed" Click="Disable_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
            <Button x:Name="EnableBtn"  Content="Enable"  Width="90" Margin="0,0,8,0"
            Visibility="Collapsed" Click="Enable_Click" Style="{StaticResource Btn.GlobalPrimary}"/>
            <CheckBox x:Name="ShowInactive" Content="Show inactive" Margin="16,0,0,0"
                      Checked="FilterChanged" Unchecked="FilterChanged" Style="{StaticResource ModernCheckBox}"/>
        </StackPanel>

        <!-- Grid -->
        <DataGrid x:Name="BrandsGrid" Style="{StaticResource ModernDataGrid}" 
          AutoGenerateColumns="False"
          IsReadOnly="True"
          SelectionMode="Single"
          SelectionChanged="Grid_SelectionChanged"
          MouseDoubleClick="Grid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"     Binding="{Binding Id}"       Width="70"/>
                <DataGridTextColumn Header="Name"   Binding="{Binding Name}"     Width="*"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="90"/>
                <!-- If your entity uses CreatedAtUtc/UpdatedAtUtc, bind to those names -->
                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAtUtc}" Width="160"/>
                <DataGridTextColumn Header="Updated" Binding="{Binding UpdatedAtUtc}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom bar -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="Esc = Close, Enter = Edit" Foreground="Gray"/>
        </StackPanel>
    </DockPanel>
</Window>
