<Window x:Class="Pos.Client.Wpf.Windows.Admin.CategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Categories" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        KeyDown="Window_KeyDown">
    <DockPanel Margin="12">

        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top" Margin="0,0,0,8"
                 Style="{StaticResource ModernToolBar.Compact}">
            <Button Content="Add" Width="90" Margin="0,0,8,0"
                    Click="Add_Click"/>
            <Button x:Name="EditBtn" Content="Edit" Width="90" Margin="0,0,8,0"
                    Click="Edit_Click"/>

            <!-- Only one is visible based on selection -->
            <Button x:Name="DisableBtn" Content="Disable" Width="90" Margin="0,0,8,0"
                    Visibility="Collapsed" Click="Disable_Click"/>
            <Button x:Name="EnableBtn"  Content="Enable"  Width="90" Margin="0,0,8,0"
                    Visibility="Collapsed" Click="Enable_Click"/>

            <Separator/>

            <CheckBox x:Name="ShowInactive" Content="Show inactive" Margin="8,0,0,0"
                      Checked="FilterChanged" Unchecked="FilterChanged"
                      Style="{StaticResource ModernCheckBox}"/>
        </ToolBar>

        <!-- Search (only visible when list actually scrolls) -->
        <StackPanel x:Name="SearchPanel" DockPanel.Dock="Top" Orientation="Horizontal"
                    Margin="0,0,0,8" Visibility="Collapsed">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,6,0"
                       Style="{StaticResource ModernTextBlock}"/>
            <TextBox x:Name="SearchBox" Width="280" Margin="0,0,8,0"
                     TextChanged="SearchBox_TextChanged" Style="{StaticResource Txt.Search}"/>
        </StackPanel>

        <!-- List -->
        <ListView x:Name="CategoriesList"
                  MouseDoubleClick="List_MouseDoubleClick"
                  SelectionChanged="List_SelectionChanged"
                  Style="{StaticResource ModernListBox}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <!-- Make each row stretch so right edge aligns flush -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="5,0,5,0" Margin="0,0,0,8" CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 1: left = name + pills, right = icon + count -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- LEFT: category name + Active/Inactive pill -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Margin="0,0,8,0"/>

                                    <!-- Active pill -->
                                    <Border Background="{StaticResource Clr.Primary}"
                                            Padding="6,2" CornerRadius="10" Margin="8,0,0,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="Active" Foreground="White" FontSize="11"/>
                                    </Border>

                                    <!-- Inactive pill -->
                                    <Border Background="{StaticResource Label.Muted}"
                                            Padding="6,2" CornerRadius="10" Margin="8,0,0,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="Inactive" Foreground="White" FontSize="11"/>
                                    </Border>
                                </StackPanel>

                                <!-- RIGHT: product icon + SKU count -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal"
                                            VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <!-- Use your product icon -->
                                    <Image Source="{StaticResource Icon.Product}"
                                           Width="{DynamicResource Icon.Size}"
                                           Height="{DynamicResource Icon.Size}"
                                           Stretch="Uniform"/>
                                    <TextBlock Text="{Binding ItemCount}"
                                               FontWeight="SemiBold"
                                               Margin="6,0,0,0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Row 2: Created / Updated (muted) -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Foreground="{StaticResource Label.Muted}" FontSize="12"
                                           Margin="0,0,16,0"
                                           Text="{Binding CreatedAtUtc, StringFormat=Created: {0:yyyy-MM-dd HH:mm}}"/>
                                <TextBlock Foreground="{StaticResource Label.Muted}" FontSize="12"
                                           Text="{Binding UpdatedAtUtc, StringFormat=Updated: {0:yyyy-MM-dd HH:mm}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </DockPanel>
</Window>
