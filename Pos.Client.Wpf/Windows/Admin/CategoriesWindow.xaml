<Window x:Class="Pos.Client.Wpf.Windows.Admin.CategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Categories" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        KeyDown="Window_KeyDown">
    <DockPanel Margin="12">
        <!-- Top bar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="SearchBox" Width="240" Margin="0,0,8,0"
                     TextChanged="SearchBox_TextChanged"/>

            <Button Content="Add"  Width="90" Margin="0,0,8,0" Click="Add_Click"/>
            <Button x:Name="EditBtn" Content="Edit" Width="90" Margin="0,0,8,0" Click="Edit_Click"/>

            <!-- Show one of these depending on selection -->
            <Button x:Name="DisableBtn" Content="Disable" Width="90" Margin="0,0,8,0"
                    Visibility="Collapsed" Click="Disable_Click"/>
            <Button x:Name="EnableBtn"  Content="Enable"  Width="90" Margin="0,0,8,0"
                    Visibility="Collapsed" Click="Enable_Click"/>

            <CheckBox x:Name="ShowInactive" Content="Show inactive" Margin="16,0,0,0"
                      Checked="FilterChanged" Unchecked="FilterChanged"/>
        </StackPanel>

        <!-- Grid -->
        <DataGrid x:Name="CategoriesGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="Grid_SelectionChanged"
                  MouseDoubleClick="Grid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"      Binding="{Binding Id}"              Width="60"/>
                <DataGridTextColumn Header="Name"    Binding="{Binding Name}"            Width="*"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}"     Width="90"/>
                <!-- Use CreatedAtUtc/UpdatedAtUtc if those are your columns (like Brands).
                     If your entity has CreatedAt/UpdatedAt instead, keep those. -->
                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAtUtc}"    Width="150"/>
                <DataGridTextColumn Header="Updated" Binding="{Binding UpdatedAtUtc}"    Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="Esc = Close, Enter = Edit" Foreground="Gray"/>
        </StackPanel>
    </DockPanel>
</Window>
