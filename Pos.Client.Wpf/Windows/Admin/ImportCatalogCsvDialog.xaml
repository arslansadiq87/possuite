<UserControl x:Class="Pos.Client.Wpf.Windows.Admin.ImportCatalogCsvDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Pos.Client.Wpf.Converters"
             MinWidth="1100" MinHeight="560">
    <UserControl.Resources>
        <conv:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
    </UserControl.Resources>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="CSV file:" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtPath" Width="520" IsReadOnly="True"/>
            <Button Content="Browse…" Click="Browse_Click"/>
            <CheckBox x:Name="ChkCreateMissing" Content="Create missing Brand/Category" IsChecked="True" Margin="12,0,0,0"/>
            <Button Content="Validate" Click="Validate_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="GridRows" AutoGenerateColumns="False" IsReadOnly="True"
              CanUserAddRows="False" CanUserDeleteRows="False" Margin="0,12,0,12">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{Binding Status, Converter={StaticResource StatusToBrushConverter}}"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding RowNo}" Width="50"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                <DataGridTextColumn Header="Error" Binding="{Binding Error}" Width="250"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="95"/>
                <DataGridTextColumn Header="ProductName" Binding="{Binding ProductName}" Width="180"/>
                <DataGridTextColumn Header="ItemName" Binding="{Binding ItemName}" Width="220"/>
                <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="140"/>
                <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="150"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="TaxCode" Binding="{Binding TaxCode}" Width="90"/>
                <DataGridTextColumn Header="TaxRatePct" Binding="{Binding TaxRatePct}" Width="100"/>
                <DataGridCheckBoxColumn Header="TaxInclusive" Binding="{Binding TaxInclusive}" Width="100"/>
                <DataGridTextColumn Header="Brand" Binding="{Binding Brand}" Width="140"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="160"/>
                <DataGridTextColumn Header="V1 Name" Binding="{Binding Variant1Name}" Width="120"/>
                <DataGridTextColumn Header="V1 Value" Binding="{Binding Variant1Value}" Width="120"/>
                <DataGridTextColumn Header="V2 Name" Binding="{Binding Variant2Name}" Width="120"/>
                <DataGridTextColumn Header="V2 Value" Binding="{Binding Variant2Value}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <DockPanel Grid.Row="2">
            <TextBlock x:Name="TxtSummary" DockPanel.Dock="Left" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Save to Database" x:Name="BtnSave" IsEnabled="False" Click="Save_Click"/>
                <Button Content="Close" Click="Close_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
