<Window x:Class="Pos.Client.Wpf.Windows.Accounting.BankAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding TitleText}" Height="420" Width="640"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Parent:" Width="100" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ParentPath}" FontWeight="SemiBold"/>
        </StackPanel>


        <!-- Account Name -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Account Name:" Width="100" VerticalAlignment="Center"/>
            <TextBox Text="{Binding AccountName, UpdateSourceTrigger=PropertyChanged}" Width="420"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Bank:" Width="100" VerticalAlignment="Center"/>
            <TextBox Text="{Binding BankName, UpdateSourceTrigger=PropertyChanged}" Width="420"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Branch:" Width="100" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Branch, UpdateSourceTrigger=PropertyChanged}" Width="420"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="A/C No:" Width="100" VerticalAlignment="Center"/>
            <TextBox Text="{Binding AccountNumber, UpdateSourceTrigger=PropertyChanged}" Width="420"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="IBAN:" Width="100" VerticalAlignment="Center"/>
            <TextBox Text="{Binding IBAN, UpdateSourceTrigger=PropertyChanged}" Width="420"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="SWIFT/BIC:" Width="100" VerticalAlignment="Center"/>
            <TextBox Text="{Binding SwiftBic, UpdateSourceTrigger=PropertyChanged}" Width="420"/>
        </StackPanel>

        <DockPanel Grid.Row="7" Margin="0,8,0,0">
            <CheckBox DockPanel.Dock="Left" Content="Active" IsChecked="{Binding IsActiveFlag}"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Cancel" Width="90" Margin="0,0,10,0" IsCancel="True"/>
                <Button Content="Save" Width="110" IsDefault="True" Click="OnSave"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
