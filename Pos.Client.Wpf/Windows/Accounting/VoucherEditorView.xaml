<UserControl x:Class="Pos.Client.Wpf.Windows.Accounting.VoucherEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Local="clr-namespace:Pos.Client.Wpf.Converters"
             xmlns:ctrl="clr-namespace:Pos.Client.Wpf.Controls">
    <UserControl.Resources>
        <!-- BooleanToVisibilityConverter is used below -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <DockPanel Margin="12">
        <!-- Top bar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Center">
            <TextBlock Text="Type:" VerticalAlignment="Center"/>
            <ComboBox x:Name="TypeBox" Width="130" Margin="6,0"
                      ItemsSource="{Binding VoucherTypes}"
                      SelectedItem="{Binding Type}"
                      IsEnabled="{Binding IsTypeChangeAllowed}"/>

            <TextBlock Text="Date:" VerticalAlignment="Center" Margin="12,0,0,0"/>
            <DatePicker x:Name="DateBox" SelectedDate="{Binding VoucherDate}" Width="140" Margin="6,0"/>

            <TextBlock Text="Outlet:" VerticalAlignment="Center" Margin="12,0,0,0"/>
            <ComboBox x:Name="OutletBox" Width="220" Margin="6,0"
                      ItemsSource="{Binding Outlets}"
                      SelectedItem="{Binding SelectedOutlet}"
                      DisplayMemberPath="Name"
                      IsEnabled="{Binding IsOutletSelectable}"/>

            <TextBlock Text="Ref No:" VerticalAlignment="Center" Margin="12,0,0,0"/>
            <TextBox x:Name="RefBox" Width="160" Margin="6,0" Text="{Binding RefNo}"/>

            <Button Content="Save &amp; Post" Margin="16,0,0,0" Command="{Binding SaveCmd}"
                    IsEnabled="{Binding SaveEnabled}"/>

            <Button Content="Clear" Margin="6,0,0,0" Command="{Binding ClearCmd}"/>
        </StackPanel>

        <!-- Lines with footer totals aligned to columns -->
        <Grid Margin="0,6,0,0" Grid.IsSharedSizeScope="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- DataGrid -->
            <DataGrid x:Name="LinesGrid"
                      Grid.Row="0"
                      ItemsSource="{Binding Lines}"
                      Style="{StaticResource ModernDataGrid}"
                      SelectedItem="{Binding SelectedLine}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      IsReadOnly="False">
                <DataGrid.Columns>

                    <!-- Delete -->
                    <DataGridTemplateColumn Width="42" MinWidth="42">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="🗑"
                                        ToolTip="Delete this line"
                                        Padding="0"
                                        Width="28" Height="26"
                                        Command="{Binding DataContext.DeleteLineCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Account -->
                    <DataGridTemplateColumn Header="Account" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Account.Name}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ctrl:AccountSearchBox
                                ItemsSource="{Binding DataContext.Accounts, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                SelectedAccount="{Binding Account, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                AccountCommitted="AccountSearch_AccountCommitted"
                                Loaded="AccountSearchBox_Loaded"
                                PreviewMouseLeftButtonUp="AccountSearchBox_ClickCommit"
                                PreviewMouseWheel="AccountSearchBox_PreviewMouseWheel"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- Description -->
                    <DataGridTextColumn Header="Description"
                                        Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                        Width="2*" />

                    <!-- Debit -->
                    <DataGridTemplateColumn Header="Debit" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Debit, StringFormat=N2}">
                                    <TextBlock.Visibility>
                                        <Binding Path="DataContext.ShowDebitColumn" RelativeSource="{RelativeSource AncestorType=UserControl}"
                                                 Converter="{StaticResource BooleanToVisibilityConverter}"/>
                                    </TextBlock.Visibility>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Debit, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.Visibility>
                                        <Binding Path="DataContext.ShowDebitColumn" RelativeSource="{RelativeSource AncestorType=UserControl}"
                                                 Converter="{StaticResource BooleanToVisibilityConverter}"/>
                                    </TextBox.Visibility>
                                </TextBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- Credit -->
                    <DataGridTemplateColumn Header="Credit" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Credit, StringFormat=N2}">
                                    <TextBlock.Visibility>
                                        <Binding Path="DataContext.ShowCreditColumn" RelativeSource="{RelativeSource AncestorType=UserControl}"
                                                 Converter="{StaticResource BooleanToVisibilityConverter}"/>
                                    </TextBlock.Visibility>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Credit, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.Visibility>
                                        <Binding Path="DataContext.ShowCreditColumn" RelativeSource="{RelativeSource AncestorType=UserControl}"
                                                 Converter="{StaticResource BooleanToVisibilityConverter}"/>
                                    </TextBox.Visibility>
                                </TextBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>

            <!-- Footer aligned to columns -->
            <Grid Grid.Row="1" Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="42" SharedSizeGroup="del"/>
                    <ColumnDefinition Width="*" SharedSizeGroup="acct"/>
                    <ColumnDefinition Width="2*" SharedSizeGroup="desc"/>
                    <ColumnDefinition Width="120" SharedSizeGroup="debit"/>
                    <ColumnDefinition Width="120" SharedSizeGroup="credit"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="2" Text="Totals:" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,0"/>
                <TextBlock Grid.Column="3" Text="{Binding TotalDebit, StringFormat=N2}" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold"
                           Visibility="{Binding ShowDebitColumn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock Grid.Column="4" Text="{Binding TotalCredit, StringFormat=N2}" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold"
                           Visibility="{Binding ShowCreditColumn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </Grid>
    </DockPanel>
</UserControl>
