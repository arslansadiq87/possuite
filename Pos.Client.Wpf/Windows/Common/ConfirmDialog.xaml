<!-- Pos.Client.Wpf/Windows/Common/ConfirmDialog.xaml -->
<UserControl x:Class="Pos.Client.Wpf.Windows.Common.ConfirmDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="8" MinWidth="420">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleBlock"
                   FontSize="16" FontWeight="Bold" TextWrapping="Wrap"/>
        <TextBlock Grid.Row="2" x:Name="MessageBlock"
                   TextWrapping="Wrap"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <!-- OK / Cancel -->
            <Button x:Name="OkBtn" Content="OK" Width="90" Margin="0,0,8,0"
                    IsDefault="True" Click="Ok_Click"/>
            <Button x:Name="CancelBtn" Content="Cancel" Width="90"
                    IsCancel="True" Click="Cancel_Click"/>

            <!-- Yes / No -->
            <Button x:Name="YesBtn" Content="Yes" Width="90" Margin="16,0,8,0"
                    Click="Yes_Click"/>
            <Button x:Name="NoBtn" Content="No" Width="90"
                    Click="No_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
