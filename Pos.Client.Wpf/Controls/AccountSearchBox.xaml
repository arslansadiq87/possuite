<UserControl x:Class="Pos.Client.Wpf.Controls.AccountSearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Height="28" MinWidth="240">
    <Grid>
        <TextBox x:Name="SearchBox"
             Margin="0"
             VerticalContentAlignment="Center"
             Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
             />
        <Popup x:Name="Drop"
           PlacementTarget="{Binding ElementName=SearchBox}"
           Placement="Bottom"
           StaysOpen="False"
           IsOpen="{Binding IsOpen}">
            <Border BorderBrush="#DDD" BorderThickness="1" Background="White" Width="{Binding ElementName=SearchBox, Path=ActualWidth}">
                <ListBox x:Name="List"
                 ItemsSource="{Binding Results}"
                 DisplayMemberPath="Name"
                 MaxHeight="220"
                 MouseDoubleClick="List_MouseDoubleClick"
                 PreviewKeyDown="List_PreviewKeyDown"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>
