<UserControl x:Class="Pos.Client.Wpf.Controls.StockAvailableBadge"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="0" MinHeight="0">
    <Border x:Name="Root"
            Background="#FFE8F0FF"
            BorderBrush="#FF3B82F6"
            BorderThickness="1"
            CornerRadius="10"
            Padding="8,2">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock x:Name="Text"
                       FontWeight="SemiBold"
                       Text="Available: —" Margin="0,0,6,0"/>
            <TextBlock x:Name="BusyDot"
                       Visibility="Collapsed"
                       Text="•"
                       ToolTip="Loading…"/>
        </StackPanel>
    </Border>
</UserControl>