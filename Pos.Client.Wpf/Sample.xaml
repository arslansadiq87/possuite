<fluent:RibbonWindow x:Class="Pos.Client.Wpf.Sample"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:fluent="urn:fluent-ribbon"
                     xmlns:ip="http://metro.mahapps.com/winfx/xaml/iconpacks"
                     Title="POS Toolbar Sample"
                     Width="1000" Height="650">

    <DockPanel>

        <!-- Ribbon -->
        <fluent:Ribbon DockPanel.Dock="Top">

            <!-- Backstage (File menu) — NO BackstageButton -->
            <fluent:Ribbon.Menu>
                <fluent:Backstage>
                    <!-- Tab page -->
                    <fluent:BackstageTabItem Header="Settings">
                        <Grid Margin="20">
                            <TextBlock Text="Settings page" FontSize="18"/>
                        </Grid>
                    </fluent:BackstageTabItem>

                    <!-- Simple non-tab item (link-like). If your version lacks BackstageItem, remove this line. -->
                    
                </fluent:Backstage>
            </fluent:Ribbon.Menu>

            <!-- Quick Access Toolbar -->
            <fluent:Ribbon.QuickAccessItems>
                <fluent:QuickAccessMenuItem Icon="Save" ToolTip="Save" Command="ApplicationCommands.Save"/>
                <fluent:QuickAccessMenuItem Icon="Undo" ToolTip="Undo" Command="ApplicationCommands.Undo"/>
            </fluent:Ribbon.QuickAccessItems>

            <!-- TAB: Home -->
            <fluent:RibbonTabItem Header="Home">
                <fluent:RibbonGroupBox Header="Sales">
                    <fluent:Button Header="New Sale" LargeIcon="Add"/>
                    <fluent:Button Header="Return" Icon="Undo"/>
                    <fluent:Button Header="Drafts" Icon="FolderOpen"/>
                    <fluent:Button Header="History" Icon="Clock"/>
                </fluent:RibbonGroupBox>

                <fluent:RibbonGroupBox Header="Inventory">
                    <fluent:Button Header="Stock In" LargeIcon="Download"/>
                    <fluent:Button Header="Stock Out" Icon="Upload"/>
                    <fluent:Button Header="Transfer" Icon="Shuffle"/>
                    <fluent:Button Header="Adjust" Icon="Edit"/>
                </fluent:RibbonGroupBox>

                <fluent:RibbonGroupBox Header="Reports">
                    <fluent:Button Header="Sales Report" LargeIcon="ChartLine"/>
                    <fluent:Button Header="Stock Report" Icon="List"/>
                    <fluent:Button Header="Finance Report" Icon="Money"/>
                </fluent:RibbonGroupBox>

                <fluent:RibbonGroupBox Header="Users">
                    <fluent:Button Header="Salesmen">
                        <fluent:Button.Icon>
                            <ip:PackIconMaterial   Kind="AccountTie"/>
                        </fluent:Button.Icon>
                    </fluent:Button>
                    <fluent:Button Header="Cashiers">
                        <fluent:Button.Icon>
                            <ip:PackIconMaterial   Kind="CashRegister"/>
                        </fluent:Button.Icon>
                    </fluent:Button>
                    <fluent:Button Header="Managers">
                        <fluent:Button.Icon>
                            <ip:PackIconMaterial   Kind="AccountSupervisor"/>
                        </fluent:Button.Icon>
                    </fluent:Button>
                </fluent:RibbonGroupBox>
            </fluent:RibbonTabItem>

            <!-- TAB: Purchases -->
            <fluent:RibbonTabItem Header="Purchases">
                <fluent:RibbonGroupBox Header="Vendors">
                    <fluent:Button Header="New Purchase" LargeIcon="CartPlus"/>
                    <fluent:Button Header="Returns" Icon="CartArrowDown"/>
                    <fluent:Button Header="Suppliers" Icon="TruckDelivery"/>
                </fluent:RibbonGroupBox>
            </fluent:RibbonTabItem>

            <!-- TAB: Warehouse -->
            <fluent:RibbonTabItem Header="Warehouse">
                <fluent:RibbonGroupBox Header="Operations">
                    <fluent:Button Header="Transfer Stock" LargeIcon="SwapHorizontal"/>
                    <fluent:Button Header="Receive" Icon="Download"/>
                    <fluent:Button Header="Dispatch" Icon="Upload"/>
                </fluent:RibbonGroupBox>
            </fluent:RibbonTabItem>

        </fluent:Ribbon>

        <!-- MAIN CONTENT -->
        <Grid Background="#FAFAFA">
            <TextBlock Text="Your main content here"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="24"
                       Foreground="Gray"/>
        </Grid>
    </DockPanel>
</fluent:RibbonWindow>
